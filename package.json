{
  "name": "ndacm",
  "type": "module",
  "scripts": {
    "build": "vitepress build",
    "dev": "vitepress dev",
    "format": "prettier --write --ignore-unknown .",
    "format:check": "prettier --check --ignore-unknown .",
    "lint": "markdownlint-cli2 --fix \"**.md\"",
    "lint:check": "markdownlint-cli2 \"**.md\"",
    "preview": "vitepress preview",
    "spellcheck": "cspell \"**.md\"",
    "test": "bun run lint:check && bun run format:check bun run spellcheck"
  },
  "devDependencies": {
    "cspell": "^8.14.4",
    "markdownlint-cli2": "^0.14.0",
    "prettier": "^3.3.3",
    "prettier-plugin-packagejson": "^2.5.2",
    "vitepress": "^1.3.4"
  },
  "peerDependencies": {
    "typescript": "^5.6.2"
  },
  "packageManager": "bun@1.1.29"
}
